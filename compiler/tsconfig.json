{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2021"
  },
  "include": ["src", "lib/*"]
}
