{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2021"
  },
  "include": ["src", "lib/*"]
}
