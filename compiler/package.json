{
  "name": "mlogjs",
  "version": "0.4.3",
  "description": "Compiler that compiles Javascript to Mindustry Logic Code.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "bin": "./dist/bin.cjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ../docs dist build",
    "build": "rollup -c",
    "build:dev": "rollup -c --environment DEV",
    "dev": "ts-node src/bin",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "coverage": "jest --coverage",
    "start": "npm run build && npm i -g . && mlogjs",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weisrc/mlogjs.git"
  },
  "keywords": [],
  "author": "str1z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weisrc/mlogjs/issues"
  },
  "homepage": "https://github.com/weisrc/mlogjs#readme",
  "dependencies": {
    "@babel/parser": "^7.20.0",
    "@babel/types": "^7.20.0",
    "chalk": "^4.1.2",
    "cli-highlight": "^2.1.11",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^15.14.9",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "jest": "^29.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.79.1",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.1",
    "typescript": "*"
  },
  "files": [
    "build",
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ]
